---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
const { slots } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="description" content="Track your fitness habits and build better routines with our comprehensive habit tracking app." />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <title>Fitness & Habit Tracker</title>
</head>
<body>
  <div class="min-h-screen flex flex-col">
    <Header />
    <main class="flex-1 bg-zinc-100 dark:bg-zinc-950 text-zinc-900 dark:text-zinc-200">
      <slot />
    </main>
    <Footer />
  </div>
</body>
</html>
