---
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";
import {UserProfileIsland} from "../islands/UserProfileIsland";
import CalendarIsland from "../islands/CalendarIsland";
import {AuthGuard} from "../providers/AuthGuard";
import {AccountActionIsland} from "../islands/AccountActionIsland";
---
<Layout>
<AuthGuard client:load>
  <main class="max-w-5xl mx-auto p-6 space-y-6">
    <div class="mb-6">
      <h1 class="text-2xl font-bold text-gray-900 dark:text-white">User Profile</h1>
      <p class="text-gray-600 dark:text-gray-400 mt-2">Manage your account settings and information</p>
    </div>
    
    <UserProfileIsland client:load />
    
    <!-- Habit Calendar Section -->
    <div class="my-8">
      <!-- <div class="mb-4">
        <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Habit Calendar</h2>
        <p class="text-gray-600 dark:text-gray-400">View your habit progress across all months in a compact grid layout</p>
      </div> -->
      <CalendarIsland client:load />
    </div>
    
    <AccountActionIsland client:load/>
  </main>
</AuthGuard>
</Layout>
