---
import "../styles/global.css";
import {RegisterFormIsland} from "../islands/RegisterFormIsland";
import Layout from "./Layout.astro";

import AuthGuard from "../islands/react/AuthGuard";
---

<script>
  async function checkAuth() {
    try {
      const { api } = await import('../lib/api');
      try {
        // Call the /me API to verify the token and get user info
        const response = await api.get("/auth/me");
        const userData = response.data;
        // Redirect to dashboard
        if (userData.user) {
          window.location.href = '/dashboard';
        } else {
          window.location.href = '/login';
        }
      } catch (e) {
        console.error('Failed to verify token:', e);
      }
    } catch (e) {
      console.error('Auth check failed:', e);
    }
  }
  checkAuth()
</script>

<Layout>
<main class="grid place-items-center p-6">
  <div class="w-full max-w-sm rounded-xl shadow p-6">
    <h1 class="text-2xl font-semibold mb-4">Create Account</h1>
    <RegisterFormIsland client:load />
  </div>
  <a class="fixed top-4 right-4 text-sm opacity-70 hover:opacity-100" href="/">Home</a>
 </main>
</Layout>
