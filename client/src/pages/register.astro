---
import "../styles/global.css";
import {RegisterFormIsland} from "../islands/RegisterFormIsland";
import Layout from "../layouts/Layout.astro";

import {LoginAuthCheck} from "../islands/react/LoginAuthCheck";
---

<Layout>
<LoginAuthCheck client:load>
<main class="grid place-items-center p-6">
  <div class="w-full max-w-sm rounded-xl shadow p-6">
    <div class="text-center mb-6">
      <h1 class="text-2xl font-semibold mb-2">Fitness & Habit Tracker</h1>
      <p class="text-sm text-gray-600 dark:text-gray-400">Create your account</p>
    </div>
    <RegisterFormIsland client:load />
  </div>
  <a class="fixed top-4 right-4 text-sm opacity-70 hover:opacity-100" href="/">Home</a>
 </main>
</LoginAuthCheck>
</Layout>
