---
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";
import {AuthGuardIsland} from "../islands/AuthGuardIsland";
---

<Layout>
<AuthGuardIsland client:load>
<main class="max-w-5xl mx-auto p-6 space-y-8">
  <div class="text-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">Achievement Badges</h1>
    <p class="text-gray-600 dark:text-gray-400">Earn badges by completing habits and reaching milestones!</p>
  </div>

  <!-- Badge Categories -->
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    
    <!-- First Steps Badges -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6">
      <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4 flex items-center">
        <span class="text-2xl mr-2">🌱</span>
        First Steps
      </h2>
      
      <div class="space-y-4">
        <!-- First Habit Badge -->
        <div class="flex items-center p-3 bg-green-50 dark:bg-green-900/20 rounded-lg">
          <img src="https://img.icons8.com/color/48/000000/medal2.png" alt="First Habit" class="w-12 h-12 mr-3">
          <div>
            <h3 class="font-medium text-gray-900 dark:text-white">First Habit</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">Create your first habit</p>
            <div class="mt-1">
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300">
                ✓ Earned
              </span>
            </div>
          </div>
        </div>

        <!-- First Log Badge -->
        <div class="flex items-center p-3 bg-blue-50 dark:bg-blue-900/20 rounded-lg">
          <img src="https://img.icons8.com/fluency/48/000000/checkmark.png" alt="First Log" class="w-12 h-12 mr-3">
          <div>
            <h3 class="font-medium text-gray-900 dark:text-white">First Log</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">Log your first habit completion</p>
            <div class="mt-1">
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300">
                ✓ Earned
              </span>
            </div>
          </div>
        </div>

        <!-- Week Warrior Badge -->
        <div class="flex items-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg opacity-60">
          <img src="https://img.icons8.com/fluency/48/000000/calendar.png" alt="Week Warrior" class="w-12 h-12 mr-3 grayscale">
          <div>
            <h3 class="font-medium text-gray-900 dark:text-white">Week Warrior</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">Complete habits for 7 consecutive days</p>
            <div class="mt-1">
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-600 dark:bg-gray-600 dark:text-gray-400">
                🔒 Locked
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Consistency Badges -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6">
      <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4 flex items-center">
        <span class="text-2xl mr-2">🔥</span>
        Consistency
      </h2>
      
      <div class="space-y-4">
        <!-- Streak Master Badge -->
        <div class="flex items-center p-3 bg-orange-50 dark:bg-orange-900/20 rounded-lg">
          <img src="https://img.icons8.com/?size=100&id=18515&format=png&color=000000" alt="Streak Master" class="w-12 h-12 mr-3">
          <div>
            <h3 class="font-medium text-gray-900 dark:text-white">Streak Master</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">Maintain a 30-day streak</p>
            <div class="mt-1">
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-orange-100 text-orange-800 dark:bg-orange-900/30 dark:text-orange-300">
                🔥 15/30 days
              </span>
            </div>
          </div>
        </div>

        <!-- Monthly Champion Badge -->
        <div class="flex items-center p-3 bg-purple-50 dark:bg-purple-900/20 rounded-lg">
          <img src="https://img.icons8.com/fluency/48/000000/trophy.png" alt="Monthly Champion" class="w-12 h-12 mr-3">
          <div>
            <h3 class="font-medium text-gray-900 dark:text-white">Monthly Champion</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">Complete all habits for a full month</p>
            <div class="mt-1">
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-600 dark:bg-gray-600 dark:text-gray-400">
                🔒 Locked
              </span>
            </div>
          </div>
        </div>

        <!-- Perfect Week Badge -->
        <div class="flex items-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg opacity-60">
          <img src="https://img.icons8.com/fluency/48/000000/star.png" alt="Perfect Week" class="w-12 h-12 mr-3 grayscale">
          <div>
            <h3 class="font-medium text-gray-900 dark:text-white">Perfect Week</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">Complete all habits every day for a week</p>
            <div class="mt-1">
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-600 dark:bg-gray-600 dark:text-gray-400">
                🔒 Locked
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Special Achievement Badges -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6">
      <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4 flex items-center">
        <span class="text-2xl mr-2">⭐</span>
        Special Achievements
      </h2>
      
      <div class="space-y-4">
        <!-- Early Bird Badge -->
        <div class="flex items-center p-3 bg-yellow-50 dark:bg-yellow-900/20 rounded-lg">
          <img src="https://img.icons8.com/fluency/48/000000/sun.png" alt="Early Bird" class="w-12 h-12 mr-3">
          <div>
            <h3 class="font-medium text-gray-900 dark:text-white">Early Bird</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">Log habits before 7 AM</p>
            <div class="mt-1">
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300">
                ✓ Earned
              </span>
            </div>
          </div>
        </div>

        <!-- Night Owl Badge -->
        <div class="flex items-center p-3 bg-indigo-50 dark:bg-indigo-900/20 rounded-lg">
          <img src="https://img.icons8.com/fluency/48/000000/moon.png" alt="Night Owl" class="w-12 h-12 mr-3">
          <div>
            <h3 class="font-medium text-gray-900 dark:text-white">Night Owl</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">Log habits after 10 PM</p>
            <div class="mt-1">
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-600 dark:bg-gray-600 dark:text-gray-400">
                🔒 Locked
              </span>
            </div>
          </div>
        </div>

        <!-- Habit Creator Badge -->
        <div class="flex items-center p-3 bg-pink-50 dark:bg-pink-900/20 rounded-lg">
          <img src="https://img.icons8.com/fluency/48/000000/add-property.png" alt="Habit Creator" class="w-12 h-12 mr-3">
          <div>
            <h3 class="font-medium text-gray-900 dark:text-white">Habit Creator</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">Create 10 different habits</p>
            <div class="mt-1">
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-pink-100 text-pink-800 dark:bg-pink-900/30 dark:text-pink-300">
                📝 3/10 habits
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Fitness Badges -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6">
      <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4 flex items-center">
        <span class="text-2xl mr-2">💪</span>
        Fitness Focus
      </h2>
      
      <div class="space-y-4">
        <!-- Workout Warrior Badge -->
        <div class="flex items-center p-3 bg-red-50 dark:bg-red-900/20 rounded-lg">
          <img src="https://img.icons8.com/fluency/48/000000/dumbbell.png" alt="Workout Warrior" class="w-12 h-12 mr-3">
          <div>
            <h3 class="font-medium text-gray-900 dark:text-white">Workout Warrior</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">Complete 50 workout sessions</p>
            <div class="mt-1">
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-300">
                💪 12/50 sessions
              </span>
            </div>
          </div>
        </div>

        <!-- Cardio King Badge -->
        <div class="flex items-center p-3 bg-cyan-50 dark:bg-cyan-900/20 rounded-lg">
          <img src="https://img.icons8.com/fluency/48/000000/running.png" alt="Cardio King" class="w-12 h-12 mr-3">
          <div>
            <h3 class="font-medium text-gray-900 dark:text-white">Cardio King</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">Complete 30 cardio sessions</p>
            <div class="mt-1">
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-cyan-100 text-cyan-800 dark:bg-cyan-900/30 dark:text-cyan-300">
                🏃 8/30 sessions
              </span>
            </div>
          </div>
        </div>

        <!-- Flexibility Master Badge -->
        <div class="flex items-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg opacity-60">
          <img src="https://img.icons8.com/color/48/000000/yoga.png" alt="Flexibility Master" class="w-12 h-12 mr-3 grayscale">
          <div>
            <h3 class="font-medium text-gray-900 dark:text-white">Flexibility Master</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">Complete 20 stretching sessions</p>
            <div class="mt-1">
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-600 dark:bg-gray-600 dark:text-gray-400">
                🔒 Locked
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Wellness Badges -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6">
      <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4 flex items-center">
        <span class="text-2xl mr-2">🧘</span>
        Wellness & Mindfulness
      </h2>
      
      <div class="space-y-4">
        <!-- Meditation Master Badge -->
        <div class="flex items-center p-3 bg-emerald-50 dark:bg-emerald-900/20 rounded-lg">
          <img src="https://img.icons8.com/?size=100&id=16902&format=png&color=000000" alt="Meditation Master" class="w-12 h-12 mr-3">
          <div>
            <h3 class="font-medium text-gray-900 dark:text-white">Meditation Master</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">Meditate for 100 total minutes</p>
            <div class="mt-1">
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-emerald-100 text-emerald-800 dark:bg-emerald-900/30 dark:text-emerald-300">
                🧘 45/100 minutes
              </span>
            </div>
          </div>
        </div>

        <!-- Hydration Hero Badge -->
        <div class="flex items-center p-3 bg-blue-50 dark:bg-blue-900/20 rounded-lg">
          <img src="https://img.icons8.com/fluency/48/000000/water-bottle.png" alt="Hydration Hero" class="w-12 h-12 mr-3">
          <div>
            <h3 class="font-medium text-gray-900 dark:text-white">Hydration Hero</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">Drink 8 glasses of water for 14 days</p>
            <div class="mt-1">
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300">
                💧 6/14 days
              </span>
            </div>
          </div>
        </div>

        <!-- Sleep Champion Badge -->
        <div class="flex items-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg opacity-60">
          <img src="https://img.icons8.com/fluency/48/000000/sleep.png" alt="Sleep Champion" class="w-12 h-12 mr-3 grayscale">
          <div>
            <h3 class="font-medium text-gray-900 dark:text-white">Sleep Champion</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">Get 8+ hours of sleep for 21 days</p>
            <div class="mt-1">
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-600 dark:bg-gray-600 dark:text-gray-400">
                🔒 Locked
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Social Badges -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6">
      <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4 flex items-center">
        <span class="text-2xl mr-2">👥</span>
        Social & Community
      </h2>
      
      <div class="space-y-4">
        <!-- Sharing Champion Badge -->
        <div class="flex items-center p-3 bg-purple-50 dark:bg-purple-900/20 rounded-lg">
          <img src="https://img.icons8.com/fluency/48/000000/share.png" alt="Sharing Champion" class="w-12 h-12 mr-3">
          <div>
            <h3 class="font-medium text-gray-900 dark:text-white">Sharing Champion</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">Share your progress 10 times</p>
            <div class="mt-1">
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-300">
                📤 3/10 shares
              </span>
            </div>
          </div>
        </div>

        <!-- Motivator Badge -->
        <div class="flex items-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg opacity-60">
          <img src="https://img.icons8.com/ios-filled/50/000000/conference-call.png" alt="Motivator" class="w-12 h-12 mr-3 grayscale">
          <div>
            <h3 class="font-medium text-gray-900 dark:text-white">Motivator</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">Encourage 5 other users</p>
            <div class="mt-1">
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-600 dark:bg-gray-600 dark:text-gray-400">
                🔒 Locked
              </span>
            </div>
          </div>
        </div>

        <!-- Community Helper Badge -->
        <div class="flex items-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg opacity-60">
          <img src="https://img.icons8.com/fluency/48/000000/help.png" alt="Community Helper" class="w-12 h-12 mr-3 grayscale">
          <div>
            <h3 class="font-medium text-gray-900 dark:text-white">Community Helper</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">Help 3 users with their habits</p>
            <div class="mt-1">
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-600 dark:bg-gray-600 dark:text-gray-400">
                🔒 Locked
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Progress Summary -->
  <div class="bg-gradient-to-r from-blue-500 to-purple-600 rounded-xl p-6 text-white">
    <div class="text-center">
      <h2 class="text-2xl font-bold mb-2">Your Badge Progress</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-4">
        <div class="text-center">
          <div class="text-3xl font-bold">8</div>
          <div class="text-blue-100">Badges Earned</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold">12</div>
          <div class="text-blue-100">In Progress</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold">15</div>
          <div class="text-blue-100">Total Available</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Back to Dashboard -->
  <!-- <div class="text-center">
    <a href="/" class="inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors">
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Dashboard
    </a>
  </div> -->
</main>
</AuthGuardIsland>
</Layout>
