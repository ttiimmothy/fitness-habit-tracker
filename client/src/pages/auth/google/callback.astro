---
import {GoogleLoginProvider} from "../../../providers/GoogleLoginProvider";

// This page handles Google OAuth callback
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Google Auth Callback - Fitness & Habit Tracker</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
</head>
<body class="min-h-screen bg-zinc-100 dark:bg-zinc-950 flex items-center justify-center">
  <GoogleLoginProvider client:load>
  <div class="max-w-md w-full bg-white dark:bg-gray-800 shadow-lg rounded-lg p-6">
    <div class="text-center">
      <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mx-auto mb-4"></div>
      <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
        Processing Google Login...
      </h2>
      <p class="text-gray-600 dark:text-gray-400">
        Please wait while we complete your authentication.
      </p>
    </div>
  </div>
  </GoogleLoginProvider>
</body>
</html>
